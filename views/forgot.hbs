<body class="skyblue-clr">
<div class="outer-container">
   <div class="container-fluid login-bg" id="page-top">
      <div class="row">
         <div class="col-md-12">
            <div class="col-md-4 col-md-offset-4 inner col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
               <div class="text-box loginpage mt-40">
                  <p class="toptext pt-0">RESET PASSWORD</p>
                  <p><img src="images/logo.png" alt=""/></p>
                   <input type="hidden" value="{{resetpassword_token}}"  id="resetToken"/>
                  <form class="login-form registrationform resetpwd frmforgetpwd" name="login" id="forgotpassword">
                     
                     <div class="formbg">
                        <div class="error-message text-center mb-15 login_form_errormessage" style="padding: 5px 5px"></div>
                        
                        <div class="form-group">
                           <span class="astrik">*</span><input type="password" class="form-control forgetpwdprogress" id="pwdfrgt" placeholder="Enter New Password" name ="newPassword"/>
                        </div>
                        <div class="form-group">
                           <span class="astrik">*</span><input type="password" id="password" class="form-control loginpassword clr1" placeholder="Confirm Password" name="confirmpassword"/>
                        </div>
                        <div class="progressforgetpwd">
                         <div class="progress"></div>
                        

                     </div>
                      <div class="password-requirements">
                           <p>Password Requirements</p>
                           <ul>
                              <li>Include both lower and upper case characters.</li>
                              <li>Include at least one number or symbol.</li>
                              <li>Be at least 8 characters long.</li>
                           </ul>
                           
                        </div>
                     <div class="form-group mb-0">
                           <button type="button" class="btn btn-reset forgetbtnclick">SAVE &amp; LOG IN</button>
                           <div class="clearfix"></div>
